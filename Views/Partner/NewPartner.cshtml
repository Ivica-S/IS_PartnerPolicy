<body>
    <div class="container mt-5">
        <h2>Unos Partnera</h2>
        <form id="partnerForm">
            <div class="form-container">
                <div class="form-group">
                    <label for="FirstName">Ime</label>
                    <input type="text" class="form-control" min="2" id="FirstName" name="FirstName" value="@Model.FirstName" required minlength="2" maxlength="255" />
                </div>

                <div class="form-group">
                    <label for="LastName">Prezime</label>
                    <input type="text" class="form-control" min="2" id="LastName" name="LastName" value="@Model.LastName" required minlength="2" maxlength="255" />
                </div>

                <div class="form-group">
                    <label for="Address">Adresa</label>
                    <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" />
                </div>

                <div class="form-group">
                    <label for="PartnerNumber">Broj partnera</label>
                    <input type="number" class="form-control" min="1" id="PartnerNumber" name="PartnerNumber" minlength="20" maxlength="20" value="@Model.PartnerNumber" required  />
                </div>

                <div class="form-group">
                    <label for="CroatianPIN">OIB</label>
                    <input type="text" class="form-control" id="CroatianPIN" name="CroatianPIN" value="@Model.CroatianPIN" />
                </div>
            <div class="form-group">
                <label for="PartnerType">Partner Type</label>
                <select class="form-control" id="PartnerTypeId" name="PartnerTypeId" asp-for="PartnerTypeId" asp-items="@Model.PartnerTypeOptions" required>
                </select>
            </div>
             @*    <div class="form-group">
                    <label for="CreatedAtUtc">Datum kreiranja</label>
                    <input type="datetime-local" readonly class="form-control" id="CreatedAtUtc" name="CreatedAtUtc" value="@Model.CreatedAtUtc.ToString("yyyy-MM-ddTHH:mm:ss")" required />
                </div> *@

                <div class="form-group">
                    <label for="CreateByUser">Kreirano od</label>
                    <input type="email" class="form-control" id="CreatedByUser" name="CreatedByUser" value="@Model.CreatedByUser" required maxlength="255" />
                </div>

                <div class="form-group">
                    <label for="IsForeign">Strani partner</label>
                    <input type="checkbox" id="IsForeign" name="IsForeign" value="true" @(Model.IsForeign ? "checked" : "") />
                </div>

                <div class="form-group">
                    <label for="ExternalCode">Vanjski kod</label>
                    <input type="text" class="form-control" id="ExternalCode" name="ExternalCode" value="@Model.ExternalCode" required minlength="10" maxlength="20" />
                </div>
            <div class="form-group">
                <label for="Gender">Gender</label>
                <select class="form-control" id="Gender" name="Gender" asp-for="Gender" asp-items="@Model.GenderOptions" required>
                </select>
            </div>

            </div>
            @* <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addPolicyModal"><i class="bi bi-plus-circle"></i> Dodaj Policu</button> *@
            <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Spremi partnera</button>

                <a class="btn btn-outline-danger  ms-2" asp-controller="Partner" asp-action="Index">Otkaži unos</a>
            </div>
        </form>

